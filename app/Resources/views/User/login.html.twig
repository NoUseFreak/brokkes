{% extends '::base.html.twig' %}

{% trans_default_domain 'FOSUserBundle' %}

{% block content %}
    <form class="center-block form-signin" action="{{ path("login_check") }}" method="post">
        <h2>{{ 'security.login.title'|trans }}</h2>
        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />

        {% if error %}
            <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}

        <label for="inputEmail" class="sr-only">{{ 'security.login.username'|trans }}</label>
        <input type="email" placeholder="Email" id="inputEmail" class="form-control" name="_username" value="{{ last_username }}" required="required" />

        <label for="inputPassword" class="sr-only">{{ 'security.login.password'|trans }}</label>
        <input type="password" placeholder="{{ 'security.login.password'|trans }}" id="inputPassword" class="form-control" name="_password" required="required" />

        <div class="checkbox">
            <label>
                <input name="_remember_me" type="checkbox" value="remember-me"> {{ 'security.login.remember_me'|trans }}
            </label>
        </div>
        <button name="_submit" class="btn btn-lg btn-default btn-block" type="submit">{{ 'security.login.submit'|trans }}</button>
    </form>
{% endblock %}
