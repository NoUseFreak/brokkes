                {% for i in range(0,12) %}
                    <li class="list-group-item">
                        <ul class="list-inline pull-right">
                            <li><a href="#"><span class="label label-default label-pill">enable</span></a></li>
                        </ul>
                        Morbi leo risus
                    </li>
                {% endfor %}
            </ul>
        </div>
    </div>
{% endblock %}
